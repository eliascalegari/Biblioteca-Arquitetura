@model IEnumerable<Biblioteca.Models.Emprestimo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Emprestimos" asp-action="Index" method="get">
    <p>
        Titulo: <input type="text" name="SearchString" />
        <input type="submit" value="Pesquisar" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataRetirada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDevolucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusEmprestimo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataRetirada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDevolucao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Livro.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusEmprestimo.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmprestimoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmprestimoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmprestimoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
