@model IEnumerable<Biblioteca.Models.Livro>



@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Livros" asp-action="Index" method="get">
    <p>
        Titulo: <input type="text" name="SearchString" />
        <input type="submit" value="Pesquisar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoPublicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusLivro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoPublicacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paginas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusLivro.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LivroID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LivroID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LivroID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
